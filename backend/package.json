{
  "name": "student-late-tracking-backend",
  "version": "3.1.0",
  "description": "Backend API for Student Late Tracking System with MongoDB",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:test": "node -r dotenv/config server.js dotenv_config_path=.env.test",
    "test": "echo \"Error: no test specified\" && exit 1",
    "check-health": "curl http://localhost:5000/health",
    "check-db": "node scripts/checkStudents.js",
    "seed": "node scripts/seedDatabase.js",
    "import:students": "node scripts/importStudentsCsv.js",
    "seed:test": "node -r dotenv/config scripts/seedDatabase.js dotenv_config_path=.env.test",
    "add-late": "node scripts/addLateRecords.js",
    "remove-late": "node scripts/removeLateRecords.js",
    "integration-test": "node scripts/integrationTest.js",
    "cleanup": "node scripts/cleanupTestData.js"
  },
  "keywords": [
    "student",
    "attendance",
    "tracking",
    "mongodb",
    "express"
  ],
  "author": "Chelluri Sai Vishal",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.2",
    "pdfkit": "^0.13.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "nodemon": "^3.1.10"
  }
}
